<p id="notice"><%= notice %></p>

<h1>Car Orders</h1>

<table>
  <thead>
    <tr>
      <th>Customer</th>
      <th>Orderdate</th>
      <th>Deliverydate</th>
      <th>Adet</th>
      <th>Fiyat</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @car_orders.each do |car_order| %>
      <tr>
        <td><%= car_order.customer %></td>
        <td><%= car_order.orderDate %></td>
        <td><%= car_order.deliveryDate %></td>
        <td><%= car_order.adet %></td>
        <td><%= car_order.fiyat %></td>
        <td><%= car_order.status %></td>
        <td><%= link_to 'Show', car_order %></td>
        <td><%= link_to 'Edit', edit_car_order_path(car_order) %></td>
        <td><%= link_to 'Destroy', car_order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

