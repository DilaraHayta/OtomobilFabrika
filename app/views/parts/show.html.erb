<% content_for :ribbon do %>
<!-- RIBBON -->
<div id="ribbon">

  <span class="ribbon-button-alignment">
    <span id="refresh" class="btn btn-ribbon" data-action="resetWidgets" data-title="refresh"  rel="tooltip" data-placement="bottom" data-original-title="<i class='text-warning fa fa-warning'></i> Warning! This will reset all your widget settings." data-html="true">
      <i class="fa fa-refresh"></i>
    </span>
  </span>

  <!-- breadcrumb -->
  <ol class="breadcrumb">
    <li>Anasayfa</li><li>Ürünler</li><li>Parçalar</li>
  </ol>
</div>
<!-- END RIBBON -->
<% end %>

<div id="content">

  <!-- row -->
  <div class="row">

    <!-- col -->
    <div class="col-xs-12 col-sm-7 col-md-7 col-lg-4">
      <h1 class="page-title txt-color-blueDark">

        <!-- PAGE HEADER -->
        <i class="fa-fw fa fa-home"></i>
          Ürünler
        <span>>
          Ürün Detayı
        </span>
      </h1>
    </div>
    <!-- end col -->

    <!-- right side of the page with the sparkline graphs -->
    <!-- col -->
    <div class="col-xs-12 col-sm-5 col-md-5 col-lg-8 text-right">

      <a href="javascript:void(0);" class="btn btn-default">
        <i class="fa fa-3x fa-print"></i>
      </a>

    </div>
    <!-- end col -->

  </div>
  <!-- end row -->

  <!--
    The ID "widget-grid" will start to initialize all widgets below
    You do not need to use widgets if you dont want to. Simply remove
    the <section></section> and you can use wells or panels instead
    -->

  <!-- widget grid -->
  <section id="widget-grid" class="">

    <!-- row -->

    <div class="row">

      <div class="col-sm-12 col-md-12 col-lg-12">
        <!-- product -->
        <div class="product-content product-wrap clearfix product-deatil">
          <div class="row">
              <div class="col-md-5 col-sm-12 col-xs-12 ">
                <div class="product-image">
                  <div id="myCarousel-2" class="carousel slide">
                  <ol class="carousel-indicators">
                    <li data-target="#myCarousel-2" data-slide-to="0" class=""></li>
                  </ol>
                  <div class="carousel-inner">
                    <!-- Slide 1 -->
                    <div class="item active">
                      <%= image_tag 'demo/e-comm/micra1.jpg', alt: '' %>
                    </div>
                    <!-- Slide 2 -->
                    <div class="item">
                      <%= image_tag 'demo/e-comm/micra1.jpg', alt: '' %>
                    </div>
                    <!-- Slide 3 -->
                    <div class="item">
                      <%= image_tag 'demo/e-comm/micra1.jpg', alt: '' %>
                    </div>
                  </div>
                  </div>
                </div>
              </div>
              <div class="col-md-7 col-sm-12 col-xs-12">

              <h2 class="name">
                <%= @part.name %>
                <small><a href="javascript:void(0);">Nissan</a> tarafından üretilmiştir. </small>

              </h2>
              <hr>
              <h3 class="price-container">
                $<%= @part.price %>
                <small>*vergi dahil</small>
              </h3>

              <div class="certified">
                <ul>
                  <li  style="border-right:1px solid gray">Teslim Süresi : <span>7 iş günü</span></li>
                </ul>
              </div>
              <hr>
              <div class="description description-tabs">


                <ul id="myTab" class="nav nav-pills">
                  <li class="active"><a href="#more-information" data-toggle="tab" class="no-margin">Açıklama</a></li>
                </ul>
                <div id="myTabContent" class="tab-content">
                  <div class="tab-pane fade active in" id="more-information">
                    <br>
                    <p><%= @part.desc %></p>
                  </div>
                  <div class="tab-pane fade" id="specifications">
                  
                  </div>
                </div>


              </div>
              <hr>
              <div class="row">
                <div class="col-sm-12 col-md-6 col-lg-6">
                  <div class="btn-group pull-right">
                                  <%= link_to 'Düzenle', edit_part_path(@part) , class:'btn btn-white btn-default' %>
                                  <%= link_to 'Geri', parts_path, class:'btn btn-white btn-default' %>
                              </div>
                </div>
              </div>

            </div>
          </div>
        </div>
        <!-- end product -->
      </div>

    </div>

    <!-- end row -->

  </section>
  <!-- end widget grid -->

</div>
